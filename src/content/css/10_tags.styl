@import '00_variables.styl'
@import 'nib'

#vacay-crx-content

    .vacay-crx-tag
        position relative
        color rgba(0,0,0,0.44)
        background #fafafa
        font-size 13px
        font-weight 400
        margin 0 8px 8px 0
        display inline-block
        line-height 25px
        background white
        border 1px solid $border
        border-radius 2px
        &.active
            font-weight 900
    
    .vacay-crx-tag a
    a.vacay-crx-tag
        padding 3px 10px
        display inline-block
    
    .vacay-crx-tags
        .input
            display inline-block
            line-height 25px
            min-width 100px
        .remove
            border-left 1px solid $border
    
    .vacay-crx-tag.active
    .vacay-crx-tag:hover
        color $grey
        border-color rgba(211,228,120,0.9)
        background rgba(211,228,120,0.1)

    .remove:hover
        color $red
