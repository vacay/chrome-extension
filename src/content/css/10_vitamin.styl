@import 'nib'
@import '00_variables.styl'

body.vacay-crx-no-scroll
    position fixed
    overflow hidden

.vacay-crx-link
    pointer-events none

.vacay-crx-link-cover
    pointer-events auto
    absolute top left right bottom
    width 100%
    height 100%

.vacay-crx-vitamin
    margin-bottom 45px
    button
        margin 15px 0

#vacay-crx-button
    fixed bottom right 15px
    padding 5px 10px
    z-index 2147483647
    background yellow
    color #666

#vacay-crx-close
    fixed top 25px left 10px
    z-index 10
    width 45px
    hieght 45px
    border 2px solid $border
    border-radius 999em
    &:before
        content '\0000D7'
        font-size 30px
        line-height 10px
        font-weight 200    

#vacay-crx-container
    z-index 2147483647
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background rgba(255,255,255,0.95)

#vacay-crx-content
    width 100%
    max-width 550px
    margin 35px auto
    overflow-y scroll

    .vacay-crx-prescription
        position relative
        display block
        padding 15px

        img
            absolute top 15px left
            background-color #f0f0f0
            width 30px
            height 30px
            border-radius 999em
            margin-right 15px

        .body
            margin-left 45px
            margin-right 45px

        button
            absolute top 15px right

    button
        background transparent
        border 1px solid #51b364
        border-radius 999em
        padding 10px
        display inline-block
        text-align center
        color #51b364
        font-size 12px
        &.active
            background #57ad68
            border-color #57ad68
            color white

    form
        padding 15px
        border-bottom 1px solid #999

    input
        width 100%
        border none
        background transparent
        outline none

    h2
        margin 0
        padding 0
        font-size 14px
        font-weight 400
