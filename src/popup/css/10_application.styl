@import '00_variables.styl'
@import 'nib'

html
    height 200px
    width 300px
    overflow hidden

body
    position relative
    font-family "Helvetica Neue",sans-serif
    font-weight 300
    font-size 12px
    height 100%
    width 100%
    margin 0
    overflow hidden
    &.not-ready
        display none

main
    position relative
    height 100%
    width 100%
    background $bg
    z-index 1
    overflow-y scroll
    display none

.message
    padding 15px    

body.authenticated
    form
        display none
    main
        display block

footer
    position fixed
    left 0
    bottom 0
    right 0
    height 30px
    z-index 1
    background $bg-light
    border-top 1px solid $border
    font-family "FF Tisa"
    color #A6ABAF
    font-style italic
    text-transform lowercase
    font-weight 400
    padding 8px 10px
    .user
        &:after
            content ' \2014 '
            margin 0 2px